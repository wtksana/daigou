<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daigou.core.dao.UserMapper">
    <!-- Result Map-->
    <resultMap id="baseResultMap" type="com.daigou.core.domain.User">
        <result column="uuid" property="uuid"/>
        <result column="wechat" property="wechat"/>
        <result column="real_name" property="realName"/>
        <result column="mobile" property="mobile"/>
        <result column="address" property="address"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="invite_user" property="inviteUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- user table all fields -->
    <sql id="base_column_list">
        uuid,wechat,real_name,mobile,address,status,remark,invite_user,create_time,update_time
    </sql>

    <!-- 查询条件 -->
    <sql id="base_where_clause">
        where 1=1
        <trim suffixOverrides=",">
            <if test="uuid != null and uuid != '' ">
                and uuid = #{uuid}
            </if>
            <if test="wechat != null and wechat != '' ">
                and wechat = #{wechat}
            </if>
            <if test="realName != null and realName != '' ">
                and real_name = #{realName}
            </if>
            <if test="mobile != null and mobile != '' ">
                and mobile = #{mobile}
            </if>
            <if test="address != null and address != '' ">
                and address = #{address}
            </if>
            <if test="status != null ">
                and status = #{status}
            </if>
            <if test="remark != null and remark != '' ">
                and remark = #{remark}
            </if>
            <if test="inviteUser != null and inviteUser != '' ">
                and invite_user = #{inviteUser}
            </if>
            <if test="createTime != null and createTime != ''">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != ''">
                and update_time = #{updateTime}
            </if>
        </trim>
    </sql>

    <!-- 插入记录 -->
    <insert id="save" parameterType="com.daigou.core.domain.User">
        insert into dg_user (
        <trim suffixOverrides=",">
            uuid ,
            <if test="wechat != null  and wechat != '' ">
                wechat,
            </if>
            <if test="realName != null  and realName != '' ">
                real_name,
            </if>
            <if test="mobile != null  and mobile != '' ">
                mobile,
            </if>
            <if test="address != null  and address != '' ">
                address,
            </if>
            <if test="status != null  ">
                status,
            </if>
            <if test="remark != null  and remark != '' ">
                remark,
            </if>
            <if test="inviteUser != null  and inviteUser != '' ">
                invite_user,
            </if>
            create_time,
        </trim>
        ) values (
        <trim suffixOverrides=",">
            #{uuid} ,
            <if test="wechat != null  and wechat != '' ">
                #{wechat},
            </if>
            <if test="realName != null  and realName != '' ">
                #{realName},
            </if>
            <if test="mobile != null  and mobile != '' ">
                #{mobile},
            </if>
            <if test="address != null  and address != '' ">
                #{address},
            </if>
            <if test="status != null  ">
                #{status},
            </if>
            <if test="remark != null  and remark != '' ">
                #{remark},
            </if>
            <if test="inviteUser != null  and inviteUser != '' ">
                #{inviteUser},
            </if>
            now(),
        </trim>
        )
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="com.daigou.core.domain.User">
        update dg_user set wechat=#{wechat},real_name=#{realName},mobile=#{mobile},address=#{address},status=#{status},remark=#{remark},invite_User=#{inviteUser},update_time=now() where uuid=#{uuid}
    </update>

    <!-- 删除记录 -->
    <delete id="deleteByUuid" parameterType="String">
        update dg_user set status=0 where uuid = #{uuid}
    </delete>

    <!-- 根据id查询 用户表 -->
    <select id="getByUuid" resultMap="baseResultMap" parameterType="String">
        select
        <include refid="base_column_list"/>
        from dg_user where uuid = #{uuid}
    </select>

    <!-- 用户表 列表总数-->
    <select id="countByModel" resultType="java.lang.Integer" parameterType="com.daigou.core.domain.User">
        select count(1) from dg_user
        <include refid="base_where_clause"/>
    </select>

    <!-- 根据pages查询 -->
    <select id="getListByPages" resultMap="baseResultMap" parameterType="com.daigou.core.util.Pages">
        select
        <include refid="base_column_list"/>
        from dg_user where 1=1
        <if test="option != null and option != ''">
            and (wechat like CONCAT('%','${option}','%' ) or real_name like CONCAT('%','${option}','%' ) or mobile like CONCAT('%','${option}','%' ))
        </if>
    </select>

</mapper>